<div class="row mt-4">
    <div class="col-lg-12 mx-auto">
        <div class="card shadow">
            <div class="card-header">
                <h3>Servicios</h3>
            </div>
            <div class="card-body">
                <form action="/admin/search/{{document.search}}" method="POST">
                    {{!-- <div class="input-group mb-3">
                        <input class="form-control" type="text" name="search" id="search" placeholder="Filtrar por nombre">
                        <button class="btn btn-primary" type="submit"><span class="fas fa-search"></span></button>
                    </div> --}}
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Costo</th>
                                <th scope="col">Descripción</th>
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each services}}
                            <tr>
                                <td>{{service}}</td>
                                <td>${{cost}}</td>
                                <td>{{description}}</td>
                                <td>
                                    <div class="container-fluid">
                                        <div class="row justify-content-around">
                                            <a href="/admin/delete/{{_id}}" class="fas fa-trash text-decoration-none text-danger"></a>
                                            <a href="/admin/update/{{_id}}" class="fas fa-pen text-decoration-none text-warning"></a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            {{else}}
                            <tr>
                                <td colspan="4" align="center">
                                Aún no hay servicios
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <div class="form-group">
                        <a class="btn btn-info" href="/admin/createService">Crear nuevo servicio</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>