<div class="row mt-4">
    <div class="col-lg-12 mx-auto">
        <div class="card shadow">
            <div class="card-header">
                <h3>Servicios</h3>
            </div>
            <div class="card-body">
                <form action="/admin/services" method="POST">
                    <div class="input-group mb-3">
                        <input class="form-control" type="text" name="search" id="search" placeholder="Filtrar">
                        <button class="btn btn-info" type="button"><span class="fas fa-search"></span></button>
                    </div>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Costo</th>
                                <th scope="col">Descripci√≥n</th>
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each services}}
                            <tr>
                                <td>{{service}}</td>
                                <td>${{cost}}</td>
                                <td>{{description}}</td>
                                <td>
                                    <div class="container-fluid">
                                        <div class="row justify-content-around">
                                            <span class="fas fa-trash"></span>
                                            <span class="fas fa-pen"></span>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <div class="form-group">
                        <a class="btn btn-info" href="/admin/createService">Crear nuevo servicio</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>