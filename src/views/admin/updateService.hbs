<div class="row mt-4">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow">
            <div class="card-header">
                <h3>Editar Servicio</h3>
            </div>
            <div class="card-body">
                <form action="/admin/updateService/{{service._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                    <div class="container-fluid form-group">
                        <div class="row">
                            <div class="col-8">
                                <input type="text" class="form-control" name="service"
                                    placeholder="Nombre del servicio" value="{{service.service}}">
                            </div>
                            <div class="col">
                                <input type="number" class="form-control" name="cost" placeholder="Costo" value="{{service.cost}}">
                            </div>
                        </div>
                    </div>

                    <div class="form-group container-fluid">
                        <textarea class="form-control" name="description" id="description" placeholder="DescripciÃ³n">{{service.description}}</textarea>
                    </div>
                    <div class="form-group container-fluid">
                        <button type="submit" class="btn btn-block btn-primary col-md-2">Actualizar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>