<div class="jumbotron my-4 bg-light text-center">
	<h1>Agenda tu cita en Appointment</h1>

	<div class="container">
		<form action="/client/createAppointment" method="POST">
				<div class="row">
				<div class="form-group col">
					<input type="text" class="form-control" name="nameClient" placeholder="Nombre">
				</div>
				<div class="form-group col">
					<input type="email" class="form-control" name="emailClient" placeholder="Correo electrónico">
				</div>
				</div>

				<div class="row">
				<div class="form-group col">
					<input class="form-control" type="date" name="date" id="date">
				</div>
				<div class="form-group col">
					{{!-- <input class="form-control" type="time" name="time" id="time" min="09:00" max="07:00"> --}}
					<select class="form-control" name="time" id="time">
						<option value="Seleccionar">Selecciona una hora</option>
						<option value="09:00 a.m.">09:00 a.m.</option>
						<option value="10:00 a.m.">10:00 a.m.</option>
						<option value="11:00 a.m.">11:00 a.m.</option>
						<option value="12:00 p.m.">12:00 p.m.</option>
						<option value="1:00 p.m.">1:00 p.m.</option>
						<option value="2:00 p.m.">2:00 p.m.</option>
						<option value="3:00 p.m.">3:00 p.m.</option>
						<option value="4:00 p.m.">4:00 p.m.</option>
						<option value="5:00 p.m.">5:00 p.m.</option>
						<option value="6:00 p.m.">6:00 p.m.</option>
						<option value="7:00 p.m.">7:00 p.m.</option>
						<option value="8:00 p.m.">8:00 p.m.</option>
					</select>
				</div>
				<div class="form-group col">
					<select class="form-control" name="service" id="service">
						<option value="Seleccionar">Selecciona una opción</option>
						{{#each services}}
							<option value="{{service}}">{{service}} - ${{cost}}</option>
						{{/each}}
					</select>
				</div>
			</div>
			<div class="form-group mt-4">
				<button class="btn btn-primary" type="submit">Agenda</button>
			</div>
			<table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Estado</th>
                                <th scope="col">Fecha</th>
                                <th scope="col">Hora</th>
                            </tr>
                        </thead>
                        <tbody>
						{{#each appointments}}
							<tr>
								<td>Ocupado</td>
								<td>{{date}}</td>
								<td>{{time}}</td>
							</tr>
						{{else}}
							<tr>
								<td colspan="3" align="center">Aún no hay citas</td>
							</tr>
						{{/each}}
                        </tbody>
                    </table>
		</form>
	</div>
</div>